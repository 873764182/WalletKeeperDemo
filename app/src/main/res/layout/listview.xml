<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <ImageView
        android:id="@+id/aType"
        android:src="@drawable/try1"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/aTime"
        android:text="Time"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/aType"
        android:layout_toEndOf="@+id/aType"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />
    <TextView
        android:id="@+id/aConments"
        android:text="Comments"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aTime"
        android:layout_alignLeft="@+id/aTime"
        android:layout_alignStart="@+id/aTime" />
    <TextView
        android:id="@+id/aMoney"
        android:text="Money"
        android:textSize="30sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/aTime"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:textColor="#44FF44"
        android:layout_toEndOf="@+id/aTime" />
</RelativeLayout>